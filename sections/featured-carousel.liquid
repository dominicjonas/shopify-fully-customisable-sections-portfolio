<script>
  // Same JavaScript as before – no changes needed
  document.addEventListener('DOMContentLoaded', () => {
    const carousel = document.getElementById('featured-carousel');
    if (!carousel) return;

    const slides = carousel.querySelectorAll('.featured-carousel__slide');
    const progressBars = carousel.querySelectorAll('.featured-carousel__progress-bar');
    const leftArrow = carousel.querySelector('.featured-carousel__arrow.left');
    const rightArrow = carousel.querySelector('.featured-carousel__arrow.right');

    const autoplaySpeed = {{ section.settings.autoplay_speed | default: 5 }} * 1000;
    let currentIndex = 0;
    let intervalId = null;
    let isPaused = false;

    function showSlide(index) {
      slides.forEach((slide, i) => {
        slide.classList.toggle('active', i === index);
      });

      progressBars.forEach(bar => {
        const fill = bar.querySelector('.featured-carousel__progress-fill');
        bar.classList.remove('active');
        fill.style.transition = 'none';
        fill.style.width = '0%';
      });

      const currentBar = progressBars[index];
      if (currentBar) {
        const fill = currentBar.querySelector('.featured-carousel__progress-fill');
        currentBar.classList.add('active');
        void fill.offsetWidth;
        fill.style.transition = `width ${autoplaySpeed / 1000}s linear`;
        fill.style.width = '100%';
      }
    }

    function nextSlide() {
      currentIndex = (currentIndex + 1) % slides.length;
      showSlide(currentIndex);
    }

    function prevSlide() {
      currentIndex = (currentIndex - 1 + slides.length) % slides.length;
      showSlide(currentIndex);
    }

    function startAutoplay() {
      if (!isPaused) {
        intervalId = setInterval(nextSlide, autoplaySpeed);
      }
    }

    function stopAutoplay() {
      clearInterval(intervalId);
    }

    if (slides.length > 0) {
      showSlide(currentIndex);
      startAutoplay();
    }

    leftArrow.addEventListener('click', () => {
      stopAutoplay();
      prevSlide();
      startAutoplay();
    });

    rightArrow.addEventListener('click', () => {
      stopAutoplay();
      nextSlide();
      startAutoplay();
    });

    carousel.addEventListener('mouseenter', () => {
      isPaused = true;
      stopAutoplay();
    });

    carousel.addEventListener('mouseleave', () => {
      isPaused = false;
      startAutoplay();
    });

    progressBars.forEach((bar, index) => {
      bar.addEventListener('click', () => {
        stopAutoplay();
        currentIndex = index;
        showSlide(currentIndex);
        startAutoplay();
      });
    });
  });
</script>