{%- style -%}
  .sale-banner {
    background-image: url({{ 'sale-banner-background.webp' | asset_url }});
    background-size: cover;
    background-position: center;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0;
    height: 500px;
    position: relative;
  }

  .sale-banner__container {
    display: flex;
    justify-content: center;
    align-items: center;
    max-width: 1200px;
    margin: 0px 32px;
    width: 100%;
    height: 100%;
    position: relative;
  }

  .sale-banner__text {
    color: #ffffff;
    font-weight: bold;
    text-transform: uppercase;
    letter-spacing: 1px;
    display: flex;
    flex-direction: column;
    text-align: center;
    line-height: 1.1;
  }

  .sale-banner__text span {
    display: block;
    white-space: nowrap;
  }

  .sale-banner__text span:nth-child(1) {
    font-size: 40px;
  }

  .sale-banner__text span:nth-child(2) {
    font-size: 120px;
  }

  .sale-banner__button {
    display: flex;
    box-sizing: border-box;
    height: 46px;
    border: 1px solid rgb(255, 255, 255);
    border-radius: 2px;
    background: none;
    justify-content: center;
    align-items: center;
    padding: 12px 40px;
    width: auto;
    min-width: auto;
    transition: background-color 0.25s ease-in-out;
    opacity: 1;
    color: #ffffff;
    font-weight: bold;
    text-transform: uppercase;
    font-size: 14px;
    cursor: pointer;
    position: absolute;
    bottom: 32px;
    right: 32px;
  }

  .sale-banner__button:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }
{%- endstyle -%}

<div class="sale-banner">
  <div class="sale-banner__container">
    <div class="sale-banner__text">
      <span>{{ section.settings.banner_text_line1 }}</span>
      <span>{{ section.settings.banner_text_line2 }}</span>
    </div>
    <button class="sale-banner__button" onclick="window.location.href='{{ section.settings.button_link }}'">
      {{ section.settings.button_text }}
    </button>
  </div>
</div>

{% schema %}
{
  "name": "Sale Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "banner_text_line1",
      "label": "Banner Text Line 1",
      "default": "UP TO 60% OFF"
    },
    {
      "type": "text",
      "id": "banner_text_line2",
      "label": "Banner Text Line 2",
      "default": "SALE"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP SALE"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Sale Banner"
    }
  ]
}
{% endschema %}
